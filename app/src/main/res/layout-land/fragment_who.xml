<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mWhoViewModel"
            type="com.mohann.covid19.bottomnavigation.ui.who.WhoViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".bottomnavigation.ui.who.WhoFragment">

        <TextView
            android:id="@+id/textWhoIntHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hso_16dp"
            android:layout_marginTop="@dimen/hso_40dp"
            android:layout_marginEnd="@dimen/hso_16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/link_1"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/hso_20sp"
            app:layout_constraintBottom_toTopOf="@+id/textWhoInt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:autoLink="web"
            android:id="@+id/textWhoInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hso_16dp"
            android:layout_marginTop="@dimen/hso_16dp"
            android:layout_marginEnd="@dimen/hso_16dp"
            android:fontFamily="sans-serif-light"
            android:onClick="@{() -> mWhoViewModel.whoInt()}"
            android:text="@string/who_int"
            android:textAlignment="textStart"
            android:textSize="@dimen/hso_16sp"
            app:layout_constraintBottom_toTopOf="@+id/textWhoRssHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textWhoIntHeader" />

        <TextView
            android:id="@+id/textWhoRssHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hso_16dp"
            android:layout_marginTop="@dimen/hso_16dp"
            android:layout_marginEnd="@dimen/hso_16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/link_2"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/hso_20sp"
            app:layout_constraintBottom_toTopOf="@+id/textWhoRss"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textWhoInt" />

        <TextView
            android:autoLink="web"
            android:id="@+id/textWhoRss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hso_16dp"
            android:layout_marginTop="@dimen/hso_16dp"
            android:layout_marginEnd="@dimen/hso_16dp"
            android:fontFamily="sans-serif-light"
            android:onClick="@{() -> mWhoViewModel.whoRss()}"
            android:text="@string/who_rss"
            android:textAlignment="textStart"
            android:textSize="@dimen/hso_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textWhoRssHeader" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>