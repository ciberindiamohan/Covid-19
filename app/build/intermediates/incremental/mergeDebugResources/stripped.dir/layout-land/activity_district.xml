<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                                     
                                                                  

                 
                                       
                                                                     
           

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".district.DistrictActivity" android:tag="layout-land/activity_district_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/appBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hso_0dp"
            android:background="@color/white">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/hso_0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvConfirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hso_24dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/confirmed"
                            android:textColor="@color/confirmed"
                            android:textSize="@dimen/hso_16sp"
                            app:layout_constraintEnd_toStartOf="@+id/tvActive"
                            app:layout_constraintHorizontal_chainStyle="spread"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvActive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hso_24dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/active"
                            android:textColor="@color/active"
                            android:textSize="@dimen/hso_16sp"
                            app:layout_constraintEnd_toStartOf="@+id/tvRecovered"
                            app:layout_constraintStart_toEndOf="@+id/tvConfirmed"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvRecovered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hso_24dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/recovered"
                            android:textColor="@color/recovered"
                            android:textSize="@dimen/hso_16sp"
                            app:layout_constraintEnd_toStartOf="@+id/tvDeceased"
                            app:layout_constraintStart_toEndOf="@+id/tvActive"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvDeceased"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hso_24dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/deceased"
                            android:textColor="@color/deceased"
                            android:textSize="@dimen/hso_16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tvRecovered"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvConfirmedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hso_12dp"
                            android:fontFamily="sans-serif-medium"
                            android:tag="binding_1"                        
                            android:textColor="@color/confirmed"
                            android:textSize="@dimen/hso_20sp"
                            app:layout_constraintEnd_toEndOf="@+id/tvConfirmed"
                            app:layout_constraintHorizontal_chainStyle="spread"
                            app:layout_constraintStart_toStartOf="@id/tvConfirmed"
                            app:layout_constraintTop_toBottomOf="@id/tvConfirmed" />

                        <TextView
                            android:id="@+id/tvActiveValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hso_12dp"
                            android:fontFamily="sans-serif-medium"
                            android:tag="binding_2"                     
                            android:textColor="@color/active"
                            android:textSize="@dimen/hso_20sp"
                            app:layout_constraintEnd_toEndOf="@+id/tvActive"
                            app:layout_constraintStart_toStartOf="@id/tvActive"
                            app:layout_constraintTop_toBottomOf="@id/tvActive" />

                        <TextView
                            android:id="@+id/tvRecoveredValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hso_12dp"
                            android:fontFamily="sans-serif-medium"
                            android:tag="binding_3"                        
                            android:textColor="@color/recovered"
                            android:textSize="@dimen/hso_20sp"
                            app:layout_constraintEnd_toEndOf="@+id/tvRecovered"
                            app:layout_constraintStart_toStartOf="@id/tvRecovered"
                            app:layout_constraintTop_toBottomOf="@id/tvRecovered" />

                        <TextView
                            android:id="@+id/tvDeceasedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hso_12dp"
                            android:fontFamily="sans-serif-medium"
                            android:tag="binding_4"                     
                            android:textColor="@color/deceased"
                            android:textSize="@dimen/hso_20sp"
                            app:layout_constraintEnd_toEndOf="@+id/tvDeceased"
                            app:layout_constraintStart_toStartOf="@id/tvDeceased"
                            app:layout_constraintTop_toBottomOf="@id/tvDeceased" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHeaderState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/hso_4dp"
                        android:layout_marginTop="@dimen/hso_24dp"
                        android:layout_marginEnd="@dimen/hso_4dp"
                        android:background="@color/grey_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clHeader"
                        app:layout_goneMarginBottom="@dimen/hso_24dp">

                        <TextView
                            android:id="@+id/tvDummyOne"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/hso_4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvState"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.005" />

                        <TextView
                            android:id="@+id/tvState"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="start|top"
                            android:padding="@dimen/hso_4dp"
                            android:text="@string/district"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/hso_14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvDummyTwo"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@id/tvDummyOne"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.29" />

                        <TextView
                            android:id="@+id/tvDummyTwo"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/hso_4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvConfirmedHeader"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@id/tvState"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.005" />

                        <TextView
                            android:id="@+id/tvConfirmedHeader"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="end|top"
                            android:padding="@dimen/hso_4dp"
                            android:text="@string/cnfrmd"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/hso_14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvDummyThree"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tvDummyTwo"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.17" />

                        <TextView
                            android:id="@+id/tvDummyThree"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/hso_4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvActiveHeader"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@id/tvConfirmedHeader"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.005" />

                        <TextView
                            android:id="@+id/tvActiveHeader"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="end|top"
                            android:padding="@dimen/hso_4dp"
                            android:text="@string/actv"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/hso_14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvDummyFour"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tvDummyThree"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.17" />

                        <TextView
                            android:id="@+id/tvDummyFour"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/hso_4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvRecoveredHeader"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@id/tvActiveHeader"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.005" />

                        <TextView
                            android:id="@+id/tvRecoveredHeader"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="end|top"
                            android:padding="@dimen/hso_4dp"
                            android:text="@string/rcvrd"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/hso_14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvDummyFive"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tvDummyFour"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.17" />

                        <TextView
                            android:id="@+id/tvDummyFive"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/hso_4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvDeceasedHeader"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@id/tvRecoveredHeader"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.005" />

                        <TextView
                            android:id="@+id/tvDeceasedHeader"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="end|top"
                            android:padding="@dimen/hso_4dp"
                            android:text="@string/dcsd"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/hso_14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tvDummySix"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tvDummyFive"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.17" />

                        <TextView
                            android:id="@+id/tvDummySix"
                            android:layout_width="@dimen/hso_0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/hso_4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@id/tvDeceasedHeader"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.005" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/hso_4dp"
                        android:tag="binding_5"                  
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingStart="@dimen/hso_4dp"
                        android:paddingEnd="@dimen/hso_4dp"
                        android:paddingBottom="@dimen/hso_4dp"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clHeaderState" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
         